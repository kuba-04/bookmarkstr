{
  "manifest_version": 3,
  "name": "Bookmarkstr",
  "version": "1.0.0",
  "description": "A Nostr-based bookmarks viewer extension",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content-script.js"]
    }
  ]
} 
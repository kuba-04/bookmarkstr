{
  "manifest_version": 3,
  "name": "Bookmarkstr",
  "version": "1.0.0",
  "description": "A Nostr-based bookmarks viewer extension",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content-script.js"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}